<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:textColor="#FF778899"
        android:text="Select Item"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="Click below Imagebutton and select Item!"
        android:textColor="#004097"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
    <ImageButton
        android:id="@+id/Item_Select_btn"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/select3"
        android:scaleType="centerCrop"
        android:textSize="16sp"
        android:textStyle="italic">
    </ImageButton>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/item_name"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:hint="name" />
        <EditText
            android:id="@+id/item_price"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:hint="price" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Item_Check_btn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="#004097"
            android:text="Add"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/Item_back_btn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#004097"
            android:text="Back"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/earpicon">
    </ImageView>
</LinearLayout>